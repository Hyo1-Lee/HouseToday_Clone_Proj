<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">NEXTPLAY</h1>
        </div>
        <h3>로그인</h3>
        <form class="m-t" role="form" action="/login" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="id" id="id" placeholder="Username" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                    required="">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
            <p id="message" style="color: red;"></p>

            <a href="/forgot_password"><small>Forgot password?</small></a>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="/register">Create an account</a>
        </form>
        <br>
    </div>
</div>

<script>
    var result = "<%=resultMsg%>";

    if (result != "") {
        document.getElementById('message').innerText = result;
    }

    if (loginError != "") {
        document.getElementById('message').innerText = loginError;
    }
</script>